<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/create_fragment"
    tools:context=".CreateFragment"
    android:background="#FFFFFF">

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="match_parent"
        android:layout_height="537dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-81dp"
        android:background="@drawable/rectangle_1" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="550dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="95dp"
        android:columnCount="3"


        android:useDefaultMargins="true"

        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:gravity="center"

            android:orientation="vertical">
            <ImageView
                android:id="@+id/logoContact"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@color/white"
                android:src="@drawable/ic_contact" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#8624C1"
                android:textColor="@color/white"
                android:text="Contact"
                android:textSize="20sp"
                />
        </LinearLayout>

        <TextView
            android:layout_height="100dp"
            android:layout_width="15dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:gravity="center"

            android:orientation="vertical">
            <ImageView
                android:id="@+id/logoEmail"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:background="@color/white"
                android:src="@drawable/email" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#8624C1"
                android:textColor="@color/white"
                android:text="Email"
                android:textSize="20sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:gravity="center"

            android:orientation="vertical">
            <ImageView
                android:layout_width="150dp"
                android:id="@+id/logoMessage"
                android:background="@color/white"
                android:layout_height="120dp"
                android:src="@drawable/ic_message" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#8624C1"
                android:textColor="@color/white"
                android:text="Message"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:layout_height="100dp"
            android:layout_width="15dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:gravity="center"

            android:orientation="vertical">
            <ImageView
                android:layout_width="150dp"
                android:id="@+id/logoUrl"
                android:background="@color/white"
                android:layout_height="120dp"
                android:src="@drawable/ic_url" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#8624C1"
                android:textColor="@color/white"
                android:text="URL"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="150dp"
                android:id="@+id/logoText"
                android:background="@color/white"
                android:layout_height="120dp"
                android:src="@drawable/ic_text" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#8624C1"
                android:textColor="@color/white"
                android:text="Text"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:layout_height="100dp"
            android:layout_width="15dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:gravity="center"

            android:orientation="vertical">
            <ImageView
                android:layout_width="150dp"
                android:id="@+id/logoPhoneNumber"
                android:background="@color/white"
                android:layout_height="120dp"
                android:src="@drawable/ic_phonenumber" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#8624C1"
                android:textColor="@color/white"
                android:text="Phone Number"
                android:textSize="20sp" />
        </LinearLayout>

    </GridLayout>


</RelativeLayout>