<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/background2">

    <ImageView
        android:id="@+id/btn_ArrowBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="9dp"
        app:srcCompat="@drawable/ic_arrow_back" />


    <RelativeLayout
        android:id="@+id/frame_show"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/btn_ArrowBack"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/QR_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:text="QR PHONE NUMBER"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_result"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/QR_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="url_phone_number"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_copy"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="#8624C1"
            android:text="Copy"
            android:textColor="#FFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_copy"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_connect"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/background_button_corner_2"
                android:src="@drawable/ic_call" />

            <TextView
                android:id="@+id/tv_open_browser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_connect"
                android:layout_alignStart="@id/btn_connect"
                android:layout_alignEnd="@id/btn_connect"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Call"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="100dp"
                android:layout_toEndOf="@id/btn_connect"
                android:background="@drawable/background_button_corner_2"
                android:src="@drawable/ic_share_white" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_share"
                android:layout_alignStart="@id/btn_share"
                android:layout_alignEnd="@id/btn_share"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Share"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frame_show"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-80dp"
        android:background="@drawable/background_circle"
        android:padding="20dp"
        android:src="@drawable/ic_call_purple" />
</RelativeLayout>